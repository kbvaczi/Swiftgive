<% title 'Resend unlock instructions' %>

<% flash.now[:error] = devise_error_messages! if devise_error_messages!.present? %>

<%= simple_form_for(resource, :as => resource_name, :url => unlock_path(resource_name), :html => { :honeypot => true, :method => :post }) do |f| %>
        
    <%= f.input :email,	:required => true,
                        :placeholder => "Email",
                        :label => false,
                        :wrapper => :none, :wrapper_html => {:class => 'pl pr'} %>
    
    <%= button_tag(type: 'submit', class: "btn btn-primary") do %>
      <i class="fa fa-fw fa-envelope"></i> Resend 
    <% end %>   
   
<% end %>