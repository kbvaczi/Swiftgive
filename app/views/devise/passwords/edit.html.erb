<% title 'Change your password' %>

<% flash.now[:error] = devise_error_messages! if devise_error_messages!.present? %>

<div class='col-md-7 col-md-offset-2 mt mb'>
	<%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :honeypot => true, :method => :put }) do |f| %>

		<%= f.input :reset_password_token, :as => :hidden %>

		<%= f.input :password,	:as => :password, 
    												:required => true, 
                            :placeholder => "New Password",
                            :label => false,
                            :wrapper => :none, :wrapper_html => {:class => 'pl pr'}  %>

	    <%= f.input :password_confirmation,		:as => :password,
	    																			:placeholder => "Confirm New Password", 
	                                          :required => true,
	                                          :label => false,
	                                          :wrapper => :none, :wrapper_html => {:class => 'pl pr'} %>

		<%= button_tag(type: 'submit', class: "btn btn-primary") do %>
			<i class="fa fa-fw fa-save"></i> Let's do this!
		<% end %>
		
	<% end %>
</div>
