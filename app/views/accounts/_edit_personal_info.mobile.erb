<div id="account_edit_personal_info" data-role="popup" data-history='false' data-position-to="window" data-overlay-theme="a" data-transition='pop'>
    
  <div data-role="header" data-theme='a'>
      <a href="#" data-rel="back" data-role="button" data-theme="a" data-icon="delete" data-iconpos="notext" class="ui-btn-left">Close</a>
      <h4 style='margin:10px 0px;'>Edit Personal Information</h4>
  </div>

  <div class='pa-m'>

    <%= form_for current_user.account, :url => update_user_profile_path, :method => :put do |f| %>

      <div class='ui-grid-solo'>
        <%= f.text_field :first_name, :placeholder => 'First Name' %>    
      </div>

      <div class='ui-grid-solo'>
        <%= f.text_field :last_name, :placeholder => 'Last Name' %>    
      </div>

      <h4>Date of Birth</h4>
      <div class='ui-grid-solo'>
        <%= f.date_select :date_of_birth, {:order => [:month, :day, :year],
                                          :prompt => true,
                                          :discard_day => true,
                                          :use_short_month => false,
                                          :include_blank => false, 
                                          :start_year => Time.now.year - 100, 
                                          :end_year => (Time.now.year - 10)} %>          
      </div>
      <div class='ui-grid-solo mt'>
        <%= f.submit 'Update', :'data-icon' => 'check', :'data-theme' => 'b' %>
      </div>

    <% end %>

  </div>

</div>
