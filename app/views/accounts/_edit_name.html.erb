<div id="edit_name_modal" class="modal hide fade" role="dialog" aria-labelledby="edit_name_modal_label" aria-hidden="true" data-keyboard='false'>
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">x</button>
    <h3 id="edit_name_modal_label">Change Your Name</h3>
  </div>  
  <%= simple_form_for current_user.account, :url => update_user_profile_path, :html => {:id => 'edit_name_form', :class => 'modal-form'}, :validate => true, :method => :put do |f| %>
    <div class="modal-body">
      <div class='form-horizontal'>
        <%= f.input :first_name, :placeholder => 'First Name' %> 
        <%= f.input :last_name, :placeholder => 'Last Name' %>    
      </div>
    </div>
    <div class="modal-footer">
      <a class="btn" data-dismiss="modal" aria-hidden="true">Close</a>
      <%= f.submit 'Update', :class => 'btn btn-primary' %>
    </div>
  <% end %>  

</div>