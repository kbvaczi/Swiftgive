<div id="edit_name_modal" class="modal fade" data-keyboard='false'>
  <div class='modal-dialog'>
    <div class='modal-content'>
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class='modal-title' id="edit_name_modal_label">Change Your Name</h4>
      </div>  
      <%= simple_form_for current_user.account, :url => update_user_profile_path, :html => {:id => 'edit_name_form', :class => 'modal-form'}, :validate => true, :method => :put do |f| %>
        <div class="modal-body">
          <div class='form-horizontal'>
            <%= f.input :first_name, :placeholder => 'First Name' %> 
            <%= f.input :last_name, :placeholder => 'Last Name' %>    
          </div>
        </div>
        <div class="modal-footer">
          <%= f.submit "Update".html_safe, :class => 'btn btn-primary' %>
          <a class="btn btn-default" data-dismiss="modal" aria-hidden="true"><i class='fa fa-fw fa-ban'></i>Close</a>          
        </div>
      <% end %>  
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
