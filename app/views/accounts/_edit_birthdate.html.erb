<div id="edit_dob_modal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="edit_dob_label" aria-hidden="true" data-keyboard='false'>
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
    <h3 id="edit_dob_label">Edit Your Birthdate</h3>
  </div> 
  <%= simple_form_for current_user.account, :url => update_user_profile_path, :html => {:id => 'edit_dob_form', :class => 'modal-form form-horizontal'}, :validate => true, :method => :put do |f| %>
    <div class="modal-body">

      <%= f.input :date_of_birth, :hint => 'Minimum age is 18 years',
                                  :as => :date,
                                  :order => [:month, :day, :year],
                                  :prompt => true,
                                  :discard_day => false,
                                  :use_short_month => false,
                                  :include_blank => false, 
                                  :start_year => (Date.today.year - 100), 
                                  :end_year => (Date.today.year - 18) %>     
    </div>
    <div class="modal-footer">
      <a class="btn" data-dismiss="modal" aria-hidden="true">Close</a>
      <%= f.submit 'Update', :class => 'btn btn-primary' %>
    </div>
  <% end %>  
</div>