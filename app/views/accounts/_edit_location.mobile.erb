<div id="account_edit_location" class='pa-m' style='width:250px' data-role="popup" data-history='false' data-position-to="window" data-overlay-theme="a" data-transition='pop'>
    
  <div class='center_wrap'><h3>Edit Location Info</h3></div>
  
  <% location = Accounts::Location.new(params[:accounts_location] || current_user.account.attributes.slice('street_address', 'city', 'state', 'zipcode', 'country')) %> 

  <%= form_for location, :url => accounts_location_path, :method => :put do |f| %>

    <div class='ui-grid-solo'>
      <%= f.text_field :street_address, :placeholder => 'Street Address' %>    
    </div>

    <div class='ui-grid-solo'>
      <%= f.text_field :city, :placeholder => 'City' %>    
    </div>

    <div class='ui-grid-solo'>
      <%= f.text_field :state, :placeholder => 'State' %>    
    </div>

    <div class='ui-grid-solo'>
      <%= f.text_field :zipcode, :placeholder => 'Postal Code' %>    
    </div>

    <div class='ui-grid-solo'>
      <%= f.text_field :country, :placeholder => 'Country' %>    
    </div>
    
    <div class='ui-grid-a'>
      <div class='ui-block-a'><a href='#' data-role='button' data-rel='back' data-icon='delete'>Cancel</a></div>

      <div class='ui-block-b'><%= f.submit 'Update', :'data-icon' => 'check' %></div>
    </div>

  <% end %>

</div>