<div id="edit_email_modal" class="modal hide fade" tabindex="-1" role="dialog" area-labeldby='edit_email_modal_label' aria-hidden="true" data-keyboard='false'>
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" >Ã—</button>
    <h3 id="edit_email_modal_label">Edit Your Email</h3>
  </div>  
  <%= simple_form_for current_user, :url => user_registration_path, :html => {:id => 'edit_email_form', :class => 'modal-form'}, :validate => true, :method => :put do |f| %>
    <div class="modal-body">
      <div class='form-horizontal'>
        <%= f.input :email, :placeholder => 'example@domain.com', :validate => true %>    
      </div>
    </div>
    <div class="modal-footer">
      <a class="btn" data-dismiss="modal" aria-hidden="true">Close</a>
      <%= f.submit 'Update', :class => 'btn btn-primary' %>
    </div>
  <% end %>

</div>