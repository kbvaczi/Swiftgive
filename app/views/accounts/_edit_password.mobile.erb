<div id="account_edit_password" data-role="popup" data-history='false' data-position-to="window" data-overlay-theme="a" data-transition='pop'>
    
  <div data-role="header" >
      <a href="#" data-rel="back" data-role="button" data-theme="a" data-icon="delete" data-iconpos="notext" class="ui-btn-left">Close</a>
      <h4 class='ma-n'>Change Password</h4>
  </div>

  <div class='pa-m mb-s'>
    <%= simple_form_for current_user, :url => user_registration_path, :validate => false, :method => :put do |f| %>
      <div class="ui-grid-solo pa-s">
        <% if current_user.is_password_set %>      
          <%= f.input :current_password, :placeholder => 'Current Password', :label => false %>
        <% end %>
        <%= f.input :password, :placeholder => 'New Password', :label => false %>
        <%= f.input :password_confirmation, :placeholder => 'Confirm New Password', :label => false %> 
      </div>
      <div class='ui-grid-a'>
        <div class='ui-block-a'><a href='#' data-role='button' data-rel='back' data-icon='delete'>Cancel</a></div>
        <div class='ui-block-b'><%= f.submit 'Update', :'data-icon' => 'check' %></div>
      </div>
    <% end %>
  </div>

</div>
