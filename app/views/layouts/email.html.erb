<% 

background_color = '#f3f3f3'
border_radius =         "5px"
style_for_text  =       "font-family:'Helvetica Nuve', Helvetica, Arial, sans-serif;"
style_for_background =  "background:#{background_color};"
style_for_mail_main =   "font-size:12px;width:450px;border-collapse:collapse;table-layout:fixed;"
style_for_heading =     "background:#fafafa;height:25px;font-size:14px;font-weight:bold;line-height:2.4;text-align:center;padding:0 10px 0 10px;margin: 0px 0px 10px 0px;border: 1px solid #efefef;border-bottom:none;"
style_for_content =     "background:#fdfdfd;text-align:center;word-wrap:break-word;"                        
style_for_footer =      "font-size:11px;color:#bbb;text-align:center;"
style_for_link =        "font-size:11px;color:rgb(135,178,135);"

%>

<table cellspacing="0" cellpadding="0" border="0" style="<%= style_for_mail_main %>"><tbody>
  <tr>
    <th style="padding-left:15px;"></th>
    <th style="width:400px;padding-bottom:3px;text-align:right;">
        <%# add facebook icons and such here %>
    </th>
    <th style="padding-left:15px;"></th>
  </tr>
  <tr style="<%= style_for_background %>">
    <td style="border-top-left-radius:<%= border_radius %>;padding-left:10px;"> </th>
    <td style="text-align:center;width:400px;padding:10px;"> <%= link_to image_tag('http://swiftgive.s3.amazonaws.com/images/swiftgive_logo.png', :alt => "Swiftgive Logo", :width => '50%'), root_url %> </th>
    <td style="border-top-right-radius:<%= border_radius %>;padding-left:10px;"> </th>
  </tr>
  <tr>
    <td style="padding-left:15px;<%= style_for_background %>"> </th>
    <td style="<%= style_for_background %>"> 
      <table cellspacing="0" cellpadding="0" border="0" style="width:100%;"><tbody>
        <tr>
          <td style="border-top-left-radius:<%= border_radius %>;border-top-right-radius:<%= border_radius %>;<%= style_for_heading + style_for_text %>" > <%= yield :heading || "Notification" %> </td>
        </tr>
      </tbody></table>
    </td>    
    <td style="padding-left:15px;<%= style_for_background %>"> </th>
  </tr>
  <tr>
    <td style="padding-left:15px;<%= style_for_background %>"> </th>
    <td style="<%= style_for_background %>"> 
      <table cellspacing="0" cellpadding="0" border="0" style="width:100%;"><tbody>
        <tr>
          <td style="border:1px solid #efefef;border-top:none;padding:15px;border-bottom-left-radius:<%= border_radius %>;border-bottom-right-radius:<%= border_radius %>;<%= style_for_content + style_for_text %>" > <%= yield %>
          </td>
        </tr>
      </tbody></table>
    </td>
    <td style="padding-left:15px;<%= style_for_background %>"> </th>
  </tr>
  <tr>
    <td colspan=3 style="border-bottom-left-radius:<%= border_radius %>;border-bottom-right-radius:<%= border_radius %>;padding-bottom:20px;<%= style_for_background %>"> </td>
  </tr>
  <tr>
    <td colspan=3 style="padding:10px;<%= style_for_footer + style_for_text %>" >  
      <%= link_to 'About',                about_url,      :style => style_for_link %> | 
      <%= link_to 'Terms & Conditions',   terms_url,      :style => style_for_link %> |             
      <%= link_to 'Contact',              contact_url,    :style => style_for_link %>
    </td>
  </tr>
  <tr>
    <td colspan=3 style="padding:10px;<%= style_for_footer + style_for_text %>" >Please do not reply to this e-mail. This inbox is not actively monitored.<br/> To contact us, please use the link above...  Cheers!</td>
  </tr>
  <tr>
    <td colspan=3 style="padding:10px;<%= style_for_footer + style_for_text %>" > &copy; 2014 Swiftgive.com </td>
  </tr>
</tbody></table>