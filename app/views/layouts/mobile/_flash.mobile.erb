<% 

flash_type = nil
flash_message = nil

if flash[:notice].present?
	flash_type = 'notice'
	flash_message = flash[:notice].html_safe rescue nil
elsif flash[:error].present?
	flash_type = 'error'
	flash_message = flash[:error].html_safe rescue nil
end

%>

<% if defined?(flash_type) and flash_type.present? %>
	<div class='center_wrap flash_message <%= 'flash_#{flash_type}' %> pa' data-role='popup' data-position-to='window' data-transition='pop' style='width:250px'>	  
		<%= flash_message %>
		<div class='mt'><%= content_tag :a, 'OK', :'data-rel' => 'back', :'data-icon' => 'check', :'data-mini' => true, :class => 'ui-btn-center mt' %></div>
	</div>
<% end %>