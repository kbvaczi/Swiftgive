<% 

flash_type = nil
flash_message = nil

if flash[:notice].present?
	is_message_present = true
  flash_type = 'notice'
  flash_message = flash[:notice].html_safe
elsif flash[:error].present?
	is_message_present = true
  flash_type = 'error'
  flash_message = flash[:error].html_safe
end

%>

<% if defined?(is_message_present) and is_message_present %>
	<div class='center_wrap flash_message <%= "flash_#{flash_type}" %> pa-m' data-role="popup" data-position-to="window" data-theme='none' data-transition='pop' data-overlay-theme="a">
		<%= flash_message %>
	</div>
<% end %>