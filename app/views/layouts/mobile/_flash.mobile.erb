<% 

flash_type = nil
flash_message = nil

if flash[:notice].present?
	is_message_present = true
  flash_type = 'notice'
  flash_message = flash[:notice].html_safe rescue nil
elsif flash[:error].present?
	is_message_present = true
  flash_type = 'error'
  flash_message = flash[:error].html_safe rescue nil
end

%>

<% if defined?(is_message_present) and is_message_present %>
	<div class='center_wrap flash_message <%= "flash_#{flash_type}" %> pa' data-role="popup" data-position-to="window" data-transition='pop' data-overlay-theme="a" data-history='false' style='width:250px'>	  
		<%= flash_message %>
		<%= content_tag :a, "OK", :'data-role' => 'button', :'data-rel' => 'back', :'data-icon' => 'check', :class => 'ui-btn-center mt' %>
	</div>
<% end %>