<h3 class='title'>Promote</h3>
<div class="thumbnails">
	<% MarketingProduct.scoped.each do |product| %>
		<div class="col-md-3"  style='height:200px;'>
			<div class="thumbnail bc-w">
				<div class='center_wrap'>
				<%# direct link removed in favor of iframe dynamically loaded with product url %>
				<%#= link_to image_tag(product.image_url(:thumb)), product.link_to_product(:t_givecode_iid => current_fund.give_code_vector.url, :t_text_txt => current_fund.name, :t_text0_txt => current_fund.name), :class => 'clearfix center ', :target => '_blank' %>
				<%= link_to image_tag(product.image_url(:thumb)), "", 
					:class => 'clearfix center marketing_product_link', 
					:'data-toggle' => 'modal', 
					:'data-target' => '#marketing_product_modal', 
					:'data-keyboard' => false, 
					:'data-backdrop' => 'static',
					:'data-product-url' => product.link_to_product(:t_givecode_iid => current_fund.give_code_vector.url, :t_text_txt => current_fund.name, :t_text0_txt => current_fund.name) %>
				</div> 
			</div>
			<div class='caption mb ml-m' style='margin-top:-10px'>
				<strong><%= product.name %></strong>
				<p class='muted t-s' ><i><%= product.comment %></i></p>                    
			</div>
		</div>
	<% end %>
</div>

<div class="modal fade bs-example-modal-lg" id='marketing_product_modal' tabindex="-1" role="dialog" aria-hidden="true">
	<div class="modal-dialog modal-lg">
		<div class="modal-content" style='min-height:500px'>
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
				<h4 class="modal-title">Design Your Marketing Product</h4>
			</div>
			<iframe class='marketing_product_iframe' style='width:100%;height:700px' frameBorder="0"></iframe>
		</div>
	</div>
</div>

<script type='text/javascript'>
	// Dynamically load product url in iframe
	$('.marketing_product_link').click(function(event){
		event.preventDefault();
		$('.marketing_product_iframe').attr('src', $(this).data('product-url'));
	});
	// remove url from iframe when hidden to eliminate transition from previous page to next page when another marketing product is clicked
	$('#marketing_product_modal').on('hidden.bs.modal', function (e) {
	   $('.marketing_product_iframe').attr('src','');
	})
</script>