<% title "my funds" %>

<ul data-role="listview" data-inset="true">
	
	<% user_funds = current_user.funds %>
	<% user_funds.each do |fund| %>
		<li><%= link_to fund.name, fund_path(fund) %></li>
	<% end %>
	<% unless user_funds.present? %>
		<li><p>You currently are not a member of any funds...</p></li>
	<% end %>
</ul>

<ul data-role="listview" data-inset="true">
	<li  data-icon='plus'> <%= link_to 'Create new fund', new_fund_path %> </li>
</ul>