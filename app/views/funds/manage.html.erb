<% title current_fund.name %>

  <ul class="nav nav-pills">  	
    <li <%= "class=active" if not params[:section].present? %>><a href=<%= url_for params.merge(:section => nil) %>><i class="icon-eye-open"></i>&nbsp; Summary</a></li>
    <li <%= "class=active" if params[:section] == 'marketing' %>><a href=<%= url_for params.merge(:section => 'marketing') %>><i class="icon-globe"></i>&nbsp; Marketing</a></li>
    <li <%= "class=active" if params[:section] == 'donations' %>><a href=<%= url_for params.merge(:section => 'donations') %>><i class="icon-gift"></i>&nbsp; Donations</a></li>
    <li <%= "class=active" if params[:section] == 'setup' %>><a href=<%= url_for params.merge(:section => 'setup') %>><i class="icon-wrench"></i>&nbsp; Setup</a></li>
  </ul>

  <%= case params[:section]
  	when 'donations'
			render :partial => 'funds/manage/manage_donations'
		when 'marketing'
			render :partial => 'funds/manage/manage_marketing'
		when 'membership'
			render :partial => 'funds/manage/manage_membership'
		when 'setup'
			render :partial => 'funds/manage/manage_setup'
		else 
			render :partial => 'funds/manage/manage_summary' 		
  end %>

<%= content_for :sidebar do %>
	
	<div class='center_wrap content_box'>
		<h5>You are currently managing this fund</h5>
		<div >
			<%= link_to "<i class='icon-eye-open'></i> Public View".html_safe, fund_path(current_fund), :class => 'btn' %>
		</div>
	</div>

	<div class='content_box'>
		<table class='table table-borderless'>
			<tr>
				<th>Current Balance</th>
				<th><%= number_to_currency current_fund.balance %></th>
			</tr>
		</table>
		<div class='center_wrap'>
			
			<%= link_to "<i class='icon-download'></i>&nbsp; Withdraw Your Balance".html_safe, fund_withdraws_path(current_fund), :method => :post, :class => 'btn btn-primary' %>
		</div>
	</div>	
	
<% end %>
